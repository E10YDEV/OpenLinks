---
const { profile, avatarClass } = Astro.props;
---

<div class="text-center mb-8 animate-fade-in">
	<div class="relative inline-block mb-4">
		<img
			src={profile.avatar || "avatar/Avatar.webp"}
			alt={`${profile.name} avatar`}
			width="40"
			height="40"
			class={avatarClass}
		/>
		<h1 class="text-2xl font-bold  mt-6 mb-1">
			{profile.name}
		</h1>
		<p class="text-sm max-w-xs mx-auto">
			{profile.description}
		</p>
	</div>
</div>
