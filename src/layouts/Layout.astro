---
import "../styles/global.css";
const { themeClass, meta } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{meta.title}</title>
		<meta name="description" content={meta.description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="favicon/favicon.svg" />
		<meta property="og:title" content={meta.title} />
		<meta property="og:description" content={meta.description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={meta.url_base} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={meta.title} />
		<meta name="twitter:description" content={meta.description} />
		<link rel="canonical" href={meta.url_base} />
	</head>
	<body class={`min-h-screen ${themeClass.background}`}>
		<div class="container max-w-md mx-auto px-4 py-8">
			<header><slot name="header" /></header>
			<main><slot /></main>
		</div>
		<footer><slot name="footer" /></footer>
	</body>
</html>
